{
  "name": "superconnect",
  "version": "1.0.0",
  "description": "Utility scripts for Figma Code Connect configuration and component data extraction",
  "bin": {
    "superconnect": "scripts/run-pipeline.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=\"${NODE_OPTIONS:-} --localstorage-file=.jest-localstorage\" jest",
    "test:e2e:chakra": "RUN_CHAKRA_E2E=1 NODE_OPTIONS=\"${NODE_OPTIONS:-} --localstorage-file=.jest-localstorage\" jest test/chakra-e2e.test.js",
    "test:e2e:zapui": "RUN_ZAPUI_E2E=1 NODE_OPTIONS=\"${NODE_OPTIONS:-} --localstorage-file=.jest-localstorage\" jest test/zapui-e2e.test.js",
    "test:watch": "NODE_OPTIONS=\"${NODE_OPTIONS:-} --localstorage-file=.jest-localstorage\" jest --watch"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/zapui/",
      "/fixtures/chakra-ui/"
    ]
  },
  "keywords": [
    "figma",
    "code-connect",
    "design-system",
    "component-extraction",
    "configuration"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.3.2",
    "json-stringify-pretty-compact": "^4.0.0",
    "openai": "^4.104.0",
    "undici": "^6.18.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/figma-code-connect-ai-poc.git"
  },
  "bugs": {
    "url": "https://github.com/bitovi/figma-code-connect-ai-poc/issues"
  },
  "homepage": "https://github.com/bitovi/figma-code-connect-ai-poc#readme",
  "devDependencies": {
    "@figma/code-connect": "^1.3.11",
    "jest": "^30.2.0"
  }
}
