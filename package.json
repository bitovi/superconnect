{
  "name": "@bitovi/superconnect",
  "version": "0.1.4",
  "description": "CLI that turns a Figma design system file and a React/Angular component repo into publishable Figma Code Connect mappings",
  "bin": {
    "superconnect": "scripts/run-pipeline.js"
  },
  "scripts": {
    "test": "NODE_NO_WARNINGS=1 jest",
    "test:e2e:chakra": "RUN_CHAKRA_E2E=1 jest test/chakra-e2e.test.js",
    "test:e2e:chakra:small": "RUN_CHAKRA_E2E=1 CHAKRA_E2E_ONLY=Button jest test/chakra-e2e.test.js",
    "test:e2e:zapui": "RUN_ZAPUI_E2E=1 jest test/zapui-e2e.test.js",
    "test:e2e:zapui:small": "RUN_ZAPUI_E2E=1 ZAPUI_E2E_ONLY=Button jest test/zapui-e2e.test.js",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm test"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/zapui/",
      "/fixtures/chakra-ui/"
    ]
  },
  "keywords": [
    "figma",
    "code-connect",
    "design-system",
    "component-extraction",
    "configuration",
    "react",
    "angular",
    "cli",
    "tooling"
  ],
  "author": "Bitovi",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@iarna/toml": "^2.2.5",
    "@typescript-eslint/typescript-estree": "^8.50.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.3.2",
    "json-stringify-pretty-compact": "^4.0.0",
    "openai": "^4.104.0",
    "p-limit": "^3.1.0",
    "undici": "^6.18.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/superconnect.git"
  },
  "bugs": {
    "url": "https://github.com/bitovi/superconnect/issues"
  },
  "homepage": "https://github.com/bitovi/superconnect",
  "devDependencies": {
    "@figma/code-connect": "^1.3.12",
    "jest": "^30.2.0"
  },
  "files": [
    "scripts",
    "src",
    "docs",
    "prompts",
    "LICENSE",
    "README.md"
  ]
}
